extends CharacterBody2D

var speed = 200

func _process(delta):
	handle_input()

func handle_input():
	velocity = Vector2()
	
	if Input.is_action_pressed(\"up\"):
		velocity.y -= speed
	if Input.is_action_pressed(\"down\"):
		velocity.y += speed
	if Input.is_action_pressed(\"left\"):
		velocity.x -= speed
	if Input.is_action_pressed(\"right\"):
		velocity.x += speed
		
	move_and_slide()
"

